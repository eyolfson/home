# Completion
autoload -U compinit
compinit

# Correction
setopt correctall

# Prompt
autoload -U promptinit
promptinit
prompt gentoo

# Better TAB Completion
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'
zstyle ':completion::complete:*' use-cache 1

# LS Colours
eval `dircolors`

# Variables
export PATH="${PATH}:${HOME}/bin"
export GERONIMO_HOME=$HOME/workspace/geronimo-jetty7-minimal-2.2
export CLASSPATH=/usr/share/jdbc-postgresql/lib/jdbc-postgresql.jar:/home/jon/workspace/geronimo-jetty7-minimal-2.2/repository/org/apache/geronimo/framework/geronimo-management/2.2/geronimo-management-2.2.jar:$GERONIMO_HOME/repository/org/apache/geronimo/specs/geronimo-j2ee-management_1.1_spec/1.0.1/geronimo-j2ee-management_1.1_spec-1.0.1.jar:/home/jon/workspace/geronimo-jetty7-minimal-2.2/repository/org/apache/geronimo/framework/geronimo-core/2.2/geronimo-core-2.2.jar:/home/jon/workspace/geronimo-jetty7-minimal-2.2/lib/geronimo-system-2.2.jar:/home/jon/workspace/geronimo-jetty7-minimal-2.2/lib/geronimo-kernel-2.2.jar
export JAVA_OPTS=-Djava.security.manager

# Aliases
alias ls='ls --color=auto'
alias grep='grep --colour=auto'

HISTSIZE=1000
HISTFILE=~/.zshhist
