fpath=($fpath $HOME/etc/zsh/functions/Prompts)

# Completion
autoload -U compinit
compinit

# Options
setopt extendedglob

# Emacs keybindings
bindkey -e

# Prompt
autoload -Uz promptinit; promptinit
prompt gentoo

# Better TAB Completion
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'
zstyle ':completion::complete:*' use-cache 1

# LS Colours
eval `dircolors`

# Variables
export PATH="${PATH}:${HOME}/bin"
export PIN_HOME=${HOME}/src/pin-2.8-33586-gcc.3.4.6-ia32_intel64-linux
export GERONIMO_HOME=$HOME/workspace/geronimo-jetty7-minimal-2.2
export CLASSPATH=$HOME/lib/java/antlr-3.2.jar
