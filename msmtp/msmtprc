# Set default values for all following accounts
defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

# eyolfson@gmail.com account
account eyolfson@gmail.com
host smtp.gmail.com
port 587
auth on
user eyolfson@gmail.com
passwordeval pass show email/eyolfson@gmail.com
from eyolfson@gmail.com

# jeyolfso@uwaterloo.ca account
account jeyolfso@uwaterloo.ca
host mailservices.uwaterloo.ca
port 587
auth on
user jeyolfso
passwordeval pass show email/jeyolfso@uwaterloo.ca
from jeyolfso@uwaterloo.ca

# jon@eyolfson.com account
account jon@eyolfson.com
host smtp.gmail.com
port 587
auth on
user jon@eyolfson.com
passwordeval pass show email/jon@eyolfson.com
from jon@eyolfson.com

# Set a default account
account default : jon@eyolfson.com
